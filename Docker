# Dockerfile
FROM ubuntu:latest

# تحديث مستودعات الحزم وتثبيت الأدوات اللازمة
RUN apt-get update && \
    apt-get install -y git build-essential

# تثبيت Radare2
RUN git clone https://github.com/radareorg/radare2.git && \
    cd radare2 && \
    ./sys/install.sh

# إعداد دخول الأوامر لـ Radare2
ENV PATH="/radare2/bin:${PATH}"

# تعيين مجلد العمل الافتراضي
WORKDIR /app
